            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!--Modal de consumo-->
<div class="modal fade" tabindex="-1" id="modalConsumo" role="dialog" aria-labelledby="modalConsumo">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="modalConsumo">Produtos para consumo</h4>
      </div>
      <div class="modal-body">          
          <form id="form_cadItemConsumo" method="post">

              <label>Item</label>
              <select name="id_item" id="id_item" class="form-control" onchange="setValorTotal(this.value)" required>
                  <option value="">...Selecione...</option>
              </select>

              <label>Valor do item</label>
              <input type="number" id="valor_item" readonly class="form-control-plaintext form-control">
              
              <input type="hidden" nome="id_reserva" id="id_reservaModal">

              <label>Quantidade</label>
              <input type="number" nome="quantidade" id="quantidade" class="form-control" onchange="calcularValorTotal()" required>

              <label>Desconto (Opicional)</label>
              <input type="number" nome="desconto" id="desconto" value="0" onchange="calcularValorTotal()" class="form-control">

              <div id="div_valor_total">
                <label>Valor total</label>
                <input type="number" nome="valor_total" id="valor_total" readonly class="form-control-plaintext form-control">
              </div>

              <br>              
          </form>        
          <button id="btn_salvar_itemConsumo" class="btn btn-primary">Cadastrar</button>
      </div>

<!-- /.modal CheckOut -->
<div class="modal fade" id="checkout">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form method="POST" action="/checkoutReserva">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
              aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Checkout reserva</h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="form-group col-sm-6 col-md-6 col-lg-6">
              <label>Hora checkout</label>
              <input type="datetime-local" class="form-control required" name="data_checkout"
                ng-model="viewdata.anime.Nome" />
            </div>
            <div class="form-group col-sm-6 col-md-6 col-lg-6">
              <input type="hidden" name="id_reserva" id="id_reserva" />
              <input type="hidden" name="id_cama" id="id_cama" />
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-4 col-lg-3">
              <input type="submit" class="btn btn-primary form-control"></div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>