<!DOCTYPE HTML>
<html lang="pt-br">

<head>
	<meta charset="UTF-8">

	<%- include('../_includes/cabecalho'); %>

</head>

<body>

	<%- include('../_includes/navbar'); %>

	<div class="container">
		
		<div class="row">
			<div class="col-lg-12" style="padding-left: 100px; padding-top:30px;">
				<div class="panel panel-default">
					<div class="panel-heading">						
						<h2>Reservas Ativas</h2>						
					</div>	

					<div class="panel-body">
						<div class="row" style="padding-top: 30px; padding-bottom: 30px;">
							<div class="col col-lg-4" style="margin-left: 30px;">
								<a href="/historico_reserva">Historico de reservas</a>
							</div>
							<div class="col col-lg-2 col-lg-offset-5">
								<button onclick="modalNewReserva()" class="btn btn-primary btn-sm">Nova reserva</button>								
							</div>
						</div>
					
						<div class="row">
							<div class="col col-lg-11" style="margin-left: 30px; border: 1px solid #C0C0C0; border-radius: 10px;"> 
								
								<table class="table table-striped table-hover table-sm">
									<thead>
										<th class="col-lg-3">Quarto </th>
										<th class="col-lg-3">Cama</th>
										<th class="col-lg-4">Cliente</th>
										<th class="col-lg-2">Chekin</th>
										<th colspan="2">Ações</th>
									</thead>
									<tbody>
										<% if(reservas.length > 0){ %>
										<% for(var i = 0; i < reservas.length; i++){ %>
										<tr>
											<td class="col-lg-3"><%= reservas[i].nome_quarto %></td>
											<td class="col-lg-3"><%= reservas[i].nome_cama %></td>
											<td class="col-lg-4"><a
													href="reserva?id_reserva=<%= reservas[i].id_reserva %>"><%= reservas[i].nome %></a>
											</td>
											<td class="col-lg-2"><%= reservas[i].checkin %></td>
											<td>
												<button class="btn btn-info"
													onclick="modalCheckout(<%= reservas[i].id_reserva %>, <%= reservas[i].id_cama %>)">Registrar
													checkout</button>
											</td>
											<td>
												<button class="btn btn-info btn-xs" onclick="modalConsumo(<%= reservas[i].id_reserva %>)">Registrar consumo</button>
											</td>
											<!--<td>
												<a class="btn btn-primary btn-sm"
													href="/form_editar_reserva?id_reserva=<%= reservas[i].id_reserva %>&id_quarto=">Editar</a>
											</td> -->
											<td>
												<button class="btn btn-danger btn-sm"
													onclick="deleteReserva(<%= reservas[i].id_reserva %>, <%= reservas[i].id_quarto %>)">Excluir</button>
											</td>
										</tr>
										<% } %>
										<% } %>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="modal fade" id="checkout">
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				<form method="POST" action="/checkoutReserva">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
								aria-hidden="true">&times;</span></button>
						<h4 class="modal-title">Checkout reserva</h4>
					</div>
					<div class="modal-body">
						<div class="row">
							<div class="form-group col-sm-6 col-md-6 col-lg-6">
								<label>Hora checkout</label>
								<input type="datetime-local" class="form-control required" name="data_checkout"
									ng-model="viewdata.anime.Nome" />
							</div>
							<div class="form-group col-sm-6 col-md-6 col-lg-6">
								<input type="hidden" name="id_reserva" id="id_reserva" />
								<input type="hidden" name="id_cama" id="id_cama" />
							</div>
						</div>
						<div class="row">
							<div class="form-group col-md-4 col-lg-3">
								<input type="submit" class="btn btn-primary form-control"></div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

	<div class="modal fade" id="newReserva">
		<div class="modal-dialog modal-md">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
							aria-hidden="true">&times;</span></button>
					<h4 class="modal-title">Cadastrar nova reserva</h4>
				</div>
				<div class="modal-body">
					<div class="row">
						<div class="col-md-6 col-md-offset-3">
							<div class="row">
								<div class="col col-lg-12">
									<a class="btn btn-primary btn-lg btn-block" href="/cad_hospede"> Hospede não
										cadastrado</a>
								</div>
							</div>
							<div class="row">
								<div class="col col-lg-12 text-center">
									<h5>-OU-</h5>
								</div>
							</div>
							<div class="row">
								<div class="col col-lg-12">
									<a class="btn btn-primary btn-lg btn-block" href="/cad_reserva"> Hospede já
										cadastrado</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<%- include('modais_reserva'); %>

	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"
		integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
		crossorigin="anonymous"></script>

	<script type="text/javascript">
		var itensConsumo = {};
		var valorItem = 0;

		function deleteReserva(id_reserva) {
			var endereço = "/deleteReserva?id_reserva= ";
			var id = id_reserva;
			console.log(id);
			bootbox.confirm({
				size: "small",
				title: "Atenção",
				message: "Confirmar exclusão?",
				callback: function (result) {
					if (!result) return;
					window.location.href = endereço + id;
				}
			});
		}

		function modalNewReserva() {
			$('#newReserva').modal('show');
		}

		function modalCheckout(id_reserva, id_cama) {

			$('#checkout').modal('show');
			document.getElementById('id_cama').value = id_cama;
			document.getElementById('id_reserva').value = id_reserva;
		}

		function modalConsumo(id_reserva){
			console.log(id_reserva);
			$('#modalConsumo').modal('show');
			$('#id_reservaModal').val(id_reserva);

			$.ajax({
				url: '/itens',
				method: "post",
				success: function(data){
					if(data){
						itensConsumo = data;
						defineOpptionsConsumo(itensConsumo);
						$('#div_valor_total').hide();
					}					
				}
			});	
			
		}

		$('#btn_salvar_itemConsumo').click(function(){

			var data = {
				id_item : $('#id_item').val(),
				id_reserva : $('#id_reservaModal').val(), 
				quantidade : $('#quantidade').val(),
				desconto : $('#desconto').val(),
				valor_total : $('#valor_total').val()
			};

			$.ajax({

				url: '/salvarItemConsumido',

				method: 'POST',

				data: data,

				success: function(data){

					$('#modalConsumo').modal('hide');

					var dialog = bootbox.dialog({
						message: '<p class="text-center mb-0">'+data+'</p>',
						closeButton: false
					}).addClass("modal-dialog-centered");	
									
					setTimeout(function(){ 
						dialog.modal('hide'); 
					},1500);
				}
			});

		});

		function defineOpptionsConsumo(itens){
			console.log(itens);
			for (var i = 0; i < itens.length; i++){
			
				var opcoes = document.createElement('option');
				
				opcoes.value = itens[i].id_item;
				opcoes.innerHTML = itens[i].nome_item + " - R$" +itens[i].valor;

				$('#id_item').append(opcoes);

			}
		}

		function getValorItem(id){
			var valor = 0;
			for(i = 0; i < itensConsumo.length; i++){
				if(itensConsumo[i].id_item == id){
					valor = itensConsumo[i].valor;
				}
			}
			return valor;
		}
	
		function setValorTotal(id){
			$('#valor_item').val(getValorItem(id));
			
			$('#desconto').val(0);

			$('#quantidade').val(1);

			$('#div_valor_total').hide();
		}

		function calcularValorTotal(){
			var valor = $('#valor_item').val();
			var qnt = $('#quantidade').val();
			var desconto = $('#desconto').val();
			var valor_total = (valor * qnt) - desconto;		

			$('#valor_total').val(valor_total);
			$('#div_valor_total').show();
		}		
	</script>

</body>

</html>