<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>My Place Hospedaria</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="css/bootstrap.min.css" >
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<h3>My Place Hospedaria</h3>
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
                        <li><a href="/">HOME</a></li>
                        <li><a href="/lista_camas">Status das camas</a></li>
						<li><a href="/Hospedes">Hospedes</a></li>
						<li><a href="/Reservas">Reservas</a></li>
					</ul>
				</div>
			</div>
		</nav>

	<div class="container">	
	    <div class="row">
			<h2>Nova reserva</h2>
		</div>

		<% if(validacao.length > 0){ %>
			<div class="row">
				<div class="col-md-12">
					<div class="alert alert-danger">
						<strong>Atenção!</strong>
						<ul>
							<% for(var i = 0; i < validacao.length; i++){ %>
							<li><%= validacao[i].msg %></li>
							<% }%>
						</ul>
					</div>
				</div>
			</div>
		<% }%>

		<div class="row">
			<div class="col col-md-8">
				<form action="/salvarReserva" method="post">
				<div class="form-group">

					<label>Quarto/Cama</label>
					<select placeholder="Selecione a cama..." name="id_cama" class="form-control" required>
						<option value="">...Selecione...</option>
                        <% for(var i = 0; i < formDataQuarto.length; i++){ %>
							<option value="<%= formDataQuarto[i].id_cama %>" ><%= formDataQuarto[i].nome_quarto %> - <%= formDataQuarto[i].nome_cama %></option>
						<% }%>
					</select>
					<br>

					<label>Hospede</label>
					<select placeholder="Selecione o meio de transporte..." name="id_hospede" class="form-control" required>
						<option value="">...Selecione...</option>
                        <% for(var i = 0; i < formDataHospede.length; i++){ %>
							<option value="<%= formDataHospede[i].id_hospede %>" ><%= formDataHospede[i].nome %></option>
						<% }%>
					</select>
					<br>

                    <label>Checkin</label>
					<input type="datetime-local" name="checkin" id="checkin" class="form-control" required><br>

                    <input type="hidden" value="Ativo" name="status">
				</div>				
					<a href="/reservas" class="btn btn-danger">Voltar</a>
					<input type="submit" value="Salvar" class="btn btn-primary">
				</form>   
			</div>
		</div>   
	</div>
</div>   		
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
		<script type="text/javascript">

			$(document).ready(function(){
				var today = new Date();
				var dy = today.getDate().toString().padStart(2, '0');
				var mt = (today.getMonth()+1).toString().padStart(2, '0');
				var yr = today.getFullYear();
				
			  document.getElementById('checkin').value = yr+"-"+mt+"-"+dy;
			});

		</script>

	</body>
</html>