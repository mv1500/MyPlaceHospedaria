<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<%- include('../_includes/cabecalho'); %>
		
	</head>

	<body>

		<%- include('../_includes/navbar'); %>

	    <div class="container corpoSite">
	    	<div class="row">
			<div class="col col-lg-9 tituloInfo">	
				<h3><%= hospede[0].nome %></h3>
			</div>
		</div>

		<div class="row">
			<div class="col col-lg-9">					
				<table class="table table-striped table-hover table-lg">
		            <thead>
		            	<th colspan="2">Dados pessoais</th>
		            </thead>
		            <tbody>
		            	<tr>
		            		<th>Cpf</th>
		            		<th><%= hospede[0].cpf %></th>
		            	</tr>
		            	<tr>
		            		<th>Rg</th>
		            		<th><%= hospede[0].rg %></th>
		            	</tr>
		                <tr>
		                    <th>Data de nascimento</th>
		                    <td><%= hospede[0].data_nascimento %></td>
		                </tr>
		                <tr>
		                    <th>Sexo</th>
		                    <td><%= hospede[0].sexo %></td>
		                </tr>
		                <tr>
		                    <th>Nacionalidade</th>
		                    <td><%= hospede[0].nacionalidade %></td>
		                </tr>
		                <tr>
		                    <th>Proficao</th>
		                    <td><%= hospede[0].proficao %></td>
		                </tr>
		                <tr>
		                    <th>Email</th>
		                    <td><%= hospede[0].email %></td>
		                </tr>
		                <tr>
		                    <th>Telefone</th>
		                    <td><%= hospede[0].telefone %></td>
		                </tr>
		            </tbody>
		        </table>
	        </div>
	    </div>

	    <div class="row">
			<div class="col col-lg-9">					
				<table class="table table-striped table-hover table-lg">
		            <thead>
		            	<th colspan="2">Endereço do hospede</th>
		            </thead>
		            <tbody>	
		            	<tr>
		                    <th>Endereço</th>
		                    <td><%= hospede[0].endereco %></td>
		                </tr>	            	
		                <tr>
		                    <th>CEP</th>
		                    <td><%= hospede[0].cep  %></td>
		                </tr>
		                <tr>
		                    <th>Cidade</th>
		                    <td><%= hospede[0].cidade %></td>
		                </tr>
		                 <tr>
		                    <th>Estado</th>
		                    <td><%= hospede[0].estado %></td>
		                </tr>
		                 <tr>
		                    <th>País</th>
		                    <td><%= hospede[0].pais %></td>
		                </tr>
		            </tbody>
		        </table>
	        </div>
	    </div>

	    <div class="row">
			<div class="col col-lg-9">					
				<table class="table table-striped table-hover table-lg">
		            <thead>
		            	<th colspan="2">Dados de viagem</th>
		            </thead>
		            <tbody>		            	
		                <tr>
		                    <th>Motivo da viagem</th>
		                    <td><%= hospede[0].motivo_viagem %></td>
		                </tr>
		                <tr>
		                    <th>Meio de transporte</th>
		                    <td><%= hospede[0].meio_transporte %></td>
		                </tr>
		                <tr>
		                    <th>Ultimo destino</th>
		                    <td><%= hospede[0].ultimo_destino %></td>
		                </tr>
		                <tr>
		                    <th>Proximo destino</th>
		                    <td><%= hospede[0].proximo_destino %></td>
		                </tr>
		            </tbody>
		        </table>
	        </div>
	    </div>

        <div class="row">
        	<div class="col col-lg-9">
        		<a class="btn btn-link" href="/hospedes">Voltar</a>
        	</div>
        </div>
	</div>

	    
		<<script src="css/bootstrap/dist/js/bootstrap.min.js"></script>

	</body>
</html>