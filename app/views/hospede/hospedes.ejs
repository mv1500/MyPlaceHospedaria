<!DOCTYPE HTML>
<html lang="pt-br">

<head>
	<meta charset="UTF-8">

	<%- include('../_includes/cabecalho'); %>

</head>

<body>

	<%- include('../_includes/navbar'); %>

	<div class="container">

		<br>
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default" style="margin-left: 40px;">
					<div class="panel-heading">
						<h2>Lista de hospedes</h2>
					</div>
					<div class="panel-body">
						<div class="row" style="margin-bottom: 20px;">
							<div class="col col-md-2 col-lg-offset-9">
								<a href="/cad_hospede" class="btn btn-primary btn-sm">Novo hospede</a>
							</div>
						</div>
						<div class="row">
							<div class="col col-lg-12">
								<table class="table" style="padding: 20px;">
									<tbody>
										<% if(hospedes.length > 0){ %>
										<% for(var i = 0; i < hospedes.length; i++){ %>
										<tr>
											<td>
												<a href="hospede?id_hospede=<%= hospedes[i].id_hospede %>">
													<%= hospedes[i].nome %>
												</a>
											</td>
											<td>
												<a class="btn btn-primary btn-sm"
													href="/form_editar_hospede?id_hospede=<%= hospedes[i].id_hospede %>">
													<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
												</a>
											</td>
											<td>
												<button class="btn btn-danger btn-sm"
													onclick="deleteHospede(<%= hospedes[i].id_hospede %>)">
													<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
												</button>
											</td>
										</tr>
										<% } %>
										<% } %>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"
		integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
		crossorigin="anonymous"></script>

	<script type="text/javascript">
		function deleteHospede(id_hospede) {
			var endereço = "/deleteHospede?id_hospede= ";
			var id = id_hospede;
			bootbox.confirm({
				size: "small",
				title: "Atenção",
				message: "Confirmar exclusão?",
				callback: function (result) {
					if (!result) return;
					window.location.href = endereço + id;
				}
			});
		}



	</script>

</body>

</html>