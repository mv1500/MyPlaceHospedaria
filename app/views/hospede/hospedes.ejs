<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">
		
		<title>My Place Hospedaria</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="css/bootstrap.min.css" >
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<script src="js/bootbox.min.js"></script>

		<!-- favicon -->
		<link rel="shortcut icon" href="" />
		
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<h3>My Place Hospedaria</h3>
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
                        <li><a href="/">HOME</a></li>
                        <li><a href="/lista_camas">Status das camas</a></li>
						<li><a href="/Hospedes">Hospedes</a></li>
						<li><a href="/Reservas">Reservas</a></li>
					</ul>
				</div>
			</div>
		</nav>


	    <div class="container">
	    	<div class="row">
	    	<div class="col col-md-9 tituloInfo">
	    		<h2>Lista de hospedes</h2>
	    	</div>
	    	<div class="col col-md-2 align-self-end">
	    		<a href="/cad_hospede" class="btn btn-primary">Novo hospede</a>
	    	</div>
	    	</div>
	    	<br>
	    	<div class="row">
	    		<div class="col-lg-10">
	    			<table class="table"> 
	    					<thead>
	    						<th>hospede</th>
	    						<th colspan="2"></th>
	    					</thead>                          
                            <tbody>
                            	<% if(hospedes.length > 0){ %>
			    				<% for(var i = 0; i < hospedes.length; i++){ %>	
                                <tr>
                                    <td><a href="hospede?id_hospede=<%= hospedes[i].id_hospede %>"><%= hospedes[i].nome %></a></td>
                                    <td>
                                        <a class="btn btn-primary btn-sm" href="/form_editar_hospede?id_hospede=<%= hospedes[i].id_hospede %>">Editar</a>
                                    </td>                            
                                    <td>
                                    	<button class="btn btn-danger btn-sm" onclick="deleteHospede(<%= hospedes[i].id_hospede %>)">Excluir</button>
                                    </td>
                                </tr>
                                <% } %>
								<% } %>
                            </tbody>
                        </table>
	    		</div>
	    	</div>
	    </div>
	    		
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

		<script type="text/javascript">
			function deleteHospede(id_hospede) {
				var endereço = "/deleteHospede?id_hospede= ";
				var id = id_hospede;
				bootbox.confirm({
                    size: "small",
                    title: "Atenção",
                    message: "Confirmar exclusão?",
                    callback: function (result) {
                        if (!result) return;
                        window.location.href= endereço + id;
                    }
                });
			}


			
		</script>
	
	</body>
</html>