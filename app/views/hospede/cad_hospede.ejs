<!DOCTYPE HTML>
<html lang="pt-br">

<head>
	<meta charset="UTF-8">

	<%- include('../_includes/cabecalho'); %>
	
</head>

<body>

	<%- include('../_includes/navbar'); %>

	<div class="container">
		<div class="row">
			<div class="col col-lg-10 col-lg-offset-1">
				<h2>Cadastar venda</h2>
			</div>
		</div>

		<% if(validacao.length > 0){ %>
		<div class="row">
			<div class="col-md-12">
				<div class="alert alert-danger">
					<strong>Atenção!</strong>
					<ul>
						<% for(var i = 0; i < validacao.length; i++){ %>
						<li><%= validacao[i].msg %></li>
						<% }%>
					</ul>
				</div>
			</div>
		</div>
		<% }%>

		<br>

		<div class="row justify-content-lg-center" style="margin-left: 100px;">
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="row">
						<div class="col col-lg-12">
							<form action="/hospede/salvarHospede" method="post">
								<div class="form-group">

									<div class="row">
										<div class="col col-lg-10">
											<label>Nome</label>
											<input type="text" name="nome" class="form-control" required>
										</div>
									</div>
									<br>

									<div class="row">
										<div class="col col-lg-5">
											<label>CPF</label>
											<input type="text" name="cpf" class="form-control" required>
										</div>

										<div class="col col-lg-5">
											<label>Rg</label>
											<input type="text" name="rg" class="form-control" required>
										</div>
									</div>

									<br>
									<div class="row">
										<div class="col col-lg-4">
											<label>Data nascimento</label>
											<input type="date" name="data_nascimento" id="data_nascimento"
												class="form-control" required>
										</div>

										<div class="col col-lg-4">
											<label>Idade</label>
											<input type="number" name="idade" class="form-control" required>
										</div>

										<div class="col col-lg-4">
											<label>Sexo</label>
											<select placeholder="Selecione o sexo..." name="sexo" class="form-control"
												required>
												<option value="Masculino">Masculino</option>
												<option value="Feminino">Feminino</option>
												<option value="Outros">Outros</option>
											</select>
										</div>
									</div>

									<br>

									<div class="row">
										<div class="col col-lg-6">
											<label>Nacionalidade</label>
											<input type="text" name="nacionalidade" class="form-control" required>
										</div>

										<div class="col col-lg-6">
											<label>Proficao</label>
											<input type="text" name="proficao" class="form-control" required>
										</div>
									</div>

									<br>

									<div class="row">
										<div class="col col-lg-6">
											<label>Telefone</label>
											<input type="text" name="telefone" class="form-control" required>
										</div>

										<div class="col col-lg-6">
											<label>Email</label>
											<input type="email" name="email" class="form-control" required>
										</div>
									</div>

									<br>

									<div class="row">
										<div class="col col-lg-4">
											<label>Endereço</label>
											<input type="text" name="endereco" class="form-control" required>
										</div>

										<div class="col col-lg-4">
											<label>CEP</label>
											<input type="text" name="cep" class="form-control" required>
										</div>

										<div class="col col-lg-4">
											<label>Cidade</label>
											<input type="text" name="cidade" class="form-control" required>
										</div>
									</div>

									<br>

									<div class="row">
										<div class="col col-lg-6">
											<label>Estado</label>
											<input type="text" name="estado" class="form-control" required>
										</div>

										<div class="col col-lg-6">
											<label>País</label>
											<input type="text" name="pais" class="form-control" required>
										</div>
									</div>

									<br>

									<div class="row">
										<div class="col col-lg-6">
											<label>Motivo da viagem</label>
											<select placeholder="Selecione o motivo da viagem..." name="motivo_viagem"
												class="form-control">
												<option value="">...Selecione...</option>
												<option value="Ferias">Ferias</option>
												<option value="Negócios">Negócios</option>
												<option value="Congresso">Congresso</option>
												<option value="Estudos">Estudos</option>
												<option value="Saúde">Saúde</option>
												<option value="Outros">Outros</option>
											</select>
										</div>

										<div class="col col-lg-6">
											<label>Meio de transporte</label>
											<select placeholder="Selecione o meio de transporte..."
												name="meio_transporte" class="form-control">
												<option value="">...Selecione...</option>
												<option value="Automóvel">Automóvel</option>
												<option value="Avião">Avião</option>
												<option value="Navio">Navio</option>
												<option value="Ônibus">Ônibus</option>
												<option value="Trem">Trem</option>
												<option value="Outros">Outros</option>
											</select>
										</div>
									</div>

									<br>

									<div class="row">
										<div class="col col-lg-6">
											<label>Ultimo destino</label>
											<input type="text" name="ultimo_destino" class="form-control">
										</div>

										<div class="col col-lg-6">
											<label>Proximo destino</label>
											<input type="text" name="proximo_destino" class="form-control">
										</div>
									</div>
								</div>

								<div class="row">
									<div class="col col-lg-1">
										<a href="/hospedes" class="btn btn-danger">Voltar</a>
									</div>
									<div class="col col-lg-1">
										<input type="submit" value="Salvar" class="btn btn-primary">
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"
		integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
		crossorigin="anonymous"></script>

	<script type="text/javascript">

		$(document).ready(function () {
			var today = new Date();
			var dy = today.getDate().toString().padStart(2, '0');
			var mt = (today.getMonth() + 1).toString().padStart(2, '0');
			var yr = today.getFullYear();

			document.getElementById('data_nascimento').value = yr + "-" + mt + "-" + dy;
		});

	</script>

</body>

</html>