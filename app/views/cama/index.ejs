<!DOCTYPE HTML>
<html lang="pt-br">

<head>
	<meta charset="UTF-8">

	<%- include('../_includes/cabecalho'); %>

</head>

<body>

	<%- include('../_includes/navbar'); %>


	<div class="container corpoSite">
		<div class="row">
			<div class="col col-md-9 tituloInfo">
				<h2>Lista de camas</h2>
			</div>
		</div>
		<br>
		<div class="row" style="margin-left: 90px;">
		<% if(quartos.length > 0){ %>
			<% for(var i = 0; i < quartos.length; i++){ %>				
					<div class="col-lg-6">
						<div class="panel panel-default" style="height: 430px">
							<div class="panel-heading">
								<h3 class="panel-title"><b><%=quartos[i].nome %> </b></h3>
							</div>

							<div class="panel-body">								
								<table class="table" width=100>
									<thead>
										<th>Cama</th>
										<th>Valor</th>
										<th>Status</th>
									</thead>
									<tbody>
										<% var camasView = quartos[i].camas %>
											<% if(camasView.length > 0){ %>
												<% for(var j = 0; j < camasView.length; j++){ %>
											<tr>
												<td>
													<%= camasView[j].nome_cama%>
													<a href="/form_editar_cama?id_cama=<%= camasView[j].id_cama%>" class="btn btn-link btn-xs" aria-label="Alinhar na esquerda">
														<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
													</a>
												</td> 
												<td><%= camasView[j].valor%></td>
												<td><%= camasView[j].status%></td>
											</tr>
											<%}%>
										<%}%>
									</tbody>
								</table>
							</div>
						</div>
					</div>
			<%}%>
		<%}%>
	</div>
	</div>



	<script src="css/bootstrap/dist/js/bootstrap.min.js"></script>
</body>

</html>