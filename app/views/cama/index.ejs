	    <div class="container">
	    	<div class="row">
	    	<div class="col col-md-9 tituloInfo">
	    		<h2>Camas vagas</h2>
	    	</div>
	    	</div>
	    	<br>
	    	<div class="row">
	    		<div class="col-lg-10 col-lg-offset-1">
	    			<table class="table"> 
	    					<thead>
                                <th>Cama</th>
                                <th>Quarto</th>
                                <th>Tipo de cama</th>
                                <th>Valor</th>
	    					</thead>                          
                            <tbody>
                            	<% if(camas.length > 0){ %>
			    				<% for(var i = 0; i < camas.length; i++){ %>	
                                <tr>
                                    <td><%= camas[i].nome_cama %></td>
                                    <td>
                                        <%= camas[i].nome_quarto %>
                                    </td>                            
                                    <td>
                                        <%= camas[i].tipo_cama %>
                                    </td>
                                    <td>
                                        <%= camas[i].valor %>                                        
                                    </td>                
                                </tr>
                                <% } %>
								<% } %>
                            </tbody>
                        </table>
	    		</div>
	    	</div>
	    </div>
	    		
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>	
