<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>My Place Hospedaria</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="css/bootstrap.min.css" >

	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<h3>My Place Hospedaria</h3>
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
                        <li><a href="/">HOME</a></li>
                        <li><a href="/lista_camas">Status das camas</a></li>
						<li><a href="/Hospedes">Hospedes</a></li>
						<li><a href="/Reservas">Reservas</a></li>
					</ul>
				</div>
			</div>
		</nav>

	<div class="container">	
	    <div class="row">
			<h2>Editar Cama</h2>
		</div>

		<% if(validacao.length > 0){ %>
			<div class="row">
				<div class="col-md-12">
					<div class="alert alert-danger">
						<strong>Atenção!</strong>
						<ul>
							<% for(var i = 0; i < validacao.length; i++){ %>
							<li><%= validacao[i].msg %></li>
							<% }%>
						</ul>
					</div>
				</div>
			</div>
		<% }%>

		<div class="row">
			<div class="col col-md-8">
				<form action="/editar_cama" method="post">
				<div class="form-group">
			
					<label>Nome cama</label>
					<input type="text" name="nome_cama" id="nome_cama" class="form-control" required><br>

					<label>Tipo cama</label>
					<input type="text" name="tipo_cama" id="tipo_cama" class="form-control" required><br>

					<label>Valor</label>
					<input type="number" name="valor" id="valor" class="form-control" required><br>	

					<input type="hidden" name="id_cama" id="id_cama">

					<input type="submit" class="btn btn-primary" value="enviar">

				</form>   
			</div>
		</div>   
	</div>
</div>   		
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

		<script>
			$(document).ready( function () {
				
				document.getElementById('nome_cama').value = "<%=cama[0].nome_cama %>";
				document.getElementById('tipo_cama').value = "<%=cama[0].tipo_cama %>";
				document.getElementById('valor').value = <%=cama[0].valor %>;
				document.getElementById('id_cama').value = <%=cama[0].id_cama %>;
				

			});


		</script>


	</body>
</html>